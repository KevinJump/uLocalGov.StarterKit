@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "ulgDesign.cshtml";
}

@section MetaData {
	
	<link type="text/css" href="/scripts/libs/bxslider/jquery.bxslider.css" rel="stylesheet" />
}
@section BreadCrumb {
		<!-- homepage has no breadcrumb -->
}


<div class="row">
	<div class="col-lg-8">
		<div class="jumbotron">
			<h1>@Umbraco.Field("siteName")</h1>
			@Umbraco.Field("bodyText")
		</div>
	</div>
	<div class="col-lg-4">
		<div class="well">
				@Html.Partial("ulgHomepageNews")
		</div>
	</div>
</div>

@Html.Partial( 
	"ulgLandingPagePartial",
	Model.Content,
	new ViewDataDictionary() {
		{ "mainCount",6}
	})

	
@section Footer {
				
				
}

@section Scripts {
	<script type="text/javascript" src="/scripts/libs/bxslider/jquery.bxslider.min.js"></script>
<script type="text/javascript">

    $(document).ready(function(){

        $('.bxslider').bxSlider({
            infiniteLoop: false,
            controls: true
        });
    });
    </script>
    }