@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "ulgDesign.cshtml";
}

@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "ulgDesign.cshtml";
}

@section MetaData {

}

<div class="row">
    <div class="col-lg-12">
        <div class="page-header">
            <h1>Contact: @Umbraco.Field("title")</h1>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-6">
        @Umbraco.Field("bodyText")

        @Html.Partial("ulgRelatedLinks")
    </div>
    <div class="col-lg-6">

        @if (Umbraco.Field("emailAddress") != null)
        {
            <!-- your form filling option of choice goes here -->
            <form id="contact" method="post">
                <fieldset>
                    <legend>Your details</legend>
                    <div class="form-group">
                        <label for="contactName">Name</label>
                        <input type="text" class="form-control" id="contactName" placeholder="Your name" />
                    </div>
                    <div class="form-group">
                        <label for="contactEmail">Email Address</label>
                        <input type="text" class="form-control" id="contactEmail" placeholder="You@email.com" />
                    </div>
                    <div class="form-group">
                        <label for="message">Message</label>
                        <textarea id="message" class="form-control" rows="5"></textarea>
                    </div>

                    <button type="submit" class="btn btn-default">Send</button>
                </fieldset>
            </form>
        }

        @if (Umbraco.Field("telephone") != null)
        {
            <div class="page-header">
                <h2>Telephone</h2>
            </div>
            <p class="lead">@Umbraco.Field("telephone")</p>
        }

        @if (Umbraco.Field("address") != null)
        {
            <div class="page-header">
                <h2>Address</h2>
            </div>
            <p>@Umbraco.Field("address")</p>
        }

    </div>
</div>

@section Footer {

    
}

@section Scripts {

    
}